<h2>Movies</h2>

{{#each movies as |movie|}}
    <div class="celeb">
    <p>
        <a href="movies/{{movie._id}}">{{movie.title}}</a>
    </p>

    <form action="/movies/{{movie._id}}/edit" method="POST"><button type="submit">Edit</button></form>
        
     <form action="/movies/{{movie._id}}/delete" method="POST"><button type="submit">Delete</button></form>

</div>
{{/each}}

<p>Add a movie <a href="movies/new">here</a></p>
<p><a href="/">Go home</a></p>